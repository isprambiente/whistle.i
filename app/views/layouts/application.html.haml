%html{lang: "it"}
  = render 'head'
  %body
    = render 'top_bar'
    = render 'breadcrumbs'
    #flash.row
      .large-12.columns= content_tag( :div, "#{flash[:notice]}  <a href='#'' class='close'>&times;</a>".html_safe ,class: 'alert-box success radius', data: {alert: true}).html_safe if flash[:notice].present?
      .large-12.columns= content_tag( :div, "#{flash[:alert]}  <a href='#'' class='close'>&times;</a>".html_safe ,class: 'alert-box warning radius', data: {alert: true}).html_safe if flash[:alert].present?
    #first.row
      #left.large-2.medium-3.columns
        = yield :left
        %ul.side-nav
          %li.heading Manuali e assistenza
          %li= link_to fa_icon('book', text: t('user', scope: 'help')), page_path('user_manual')
          %li= link_to fa_icon('book', text: t('committee', scope: 'help')), page_path('committee_manual')
          %li= link_to fa_icon('book', text: t('glossary', scope: 'help')), page_path('glossary')
          %li= link_to fa_icon("bug", text: t('help.giri')) , Settings.help_url, :target => "_blank", class: 'alert'
      #content.large-10.medium-9.columns= yield

    #myModal.reveal-modal{ data: {reveal: true}}
    = render 'add_key'

    %footer.row= render 'footer'

    .javascript
      = yield :footer
